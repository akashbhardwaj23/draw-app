
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id   @default(uuid())
  name        String
  email       String        @unique
  password    String
  rooms       Room[]
  chats       Chat[]
}

model Room {
  id          Int     @id   @default(autoincrement())
  slug        String        @unique
  created_at  DateTime      @default(now())
  adminId     String
  admin       User          @relation(fields: [adminId], references: [id])
  chats       Chat[]
}

model Chat {
  id          Int     @id   @default(autoincrement())
  roomId      Int
  message     ShapeMessage?   // {type : "rect", x , y, width , height}
  userId      String
  room        Room          @relation(fields: [roomId], references: [id])
  user        User          @relation(fields: [userId], references: [id])
}


model ShapeMessage {
  id        String   @id @default(uuid())
  type      ShapeType
  xPosition Int
  yPostion  Int
  width     Int
  height    Int
  chatId    Int        @unique
  chat      Chat       @relation(fields: [chatId], references: [id])
}

enum ShapeType {
  Rectangle
  Square
  Ellipse
}